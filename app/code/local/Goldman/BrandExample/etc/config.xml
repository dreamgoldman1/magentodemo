<?xml version="1.0"?>
<config>
    <modules>
        <Goldman_BrandExample>
            <version>0.0.2</version>
        </Goldman_BrandExample>
    </modules>
    <global>
        <blocks>
            <goldman_brandexample>
                <class>Goldman_BrandExample_Block</class>
            </goldman_brandexample>
        </blocks>
        <helpers>
            <goldman_brandexample>
                <class>Goldman_BrandExample_Helper</class>
            </goldman_brandexample>
        </helpers>
        <models>
            <goldman_brandexample>
                <class>Goldman_BrandExample_Model</class>
            </goldman_brandexample>
        </models>
        <resources>
            <goldman_brandexample_setup>
                <setup>
                    <module>Goldman_BrandExample</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </goldman_brandexample_setup>
        </resources>
    </global>
    <frontend>
        <layout>
            <updates>
                <goldman_brandexample>
                    <file>goldman_brandexample.xml</file>
                </goldman_brandexample>
            </updates>
        </layout>
        <routers>
            <goldman_brandexample>
                <use>standard</use>
                <args>
                    <module>Goldman_BrandExample</module>
                    <frontName>brand</frontName>
                </args>
            </goldman_brandexample>
        </routers>
    </frontend>
</config>